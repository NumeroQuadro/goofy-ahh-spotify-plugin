{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "ImageSet",
            "images": [
                {
                    "type": "Image",
                    "size": "Medium",
                    "url": "${url}"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "${text}",
            "wrap": true
        }
    ]
}