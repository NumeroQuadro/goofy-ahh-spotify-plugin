{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.6",
    "body": [
        {
            "type": "Image",
            "url": "${albumArtUrl}",
            "size": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "${trackName}",
            "weight": "Bolder",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${artistName}",
            "isSubtle": true,
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Execute",
                    "title": "⏮️",
                    "id": "previous",
                    "verb": "previous-song"
                },
                {
                    "type": "Action.Execute",
                    "title": "▶️",
                    "id": "playPause",
                    "verb": "resume-song"
                },
                {
                    "type": "Action.Execute",
                    "title": "⏭️",
                    "id": "next",
                    "verb": "next-song"
                }
            ]
        }
    ]
}