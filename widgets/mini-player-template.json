{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${songTitle}",
                    "weight": "Bolder",
                    "size": "Large",
                    "wrap": true,
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "${artistName}",
                    "spacing": "Small",
                    "size": "Default",
                    "isSubtle": true,
                    "wrap": true,
                    "horizontalAlignment": "Center"
                }
            ]
        },
        {
            "type": "Image",
            "url": "${albumArt}",
            "size": "Large",
            "altText": "Album Art",
            "spacing": "Small",
            "horizontalAlignment": "Center"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Execute",
                    "verb": "previous-song",
                    "iconUrl": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/spotify-prev.svg",
                    "role": "Button"
                },
                {
                    "type": "Action.Execute",
                    "iconUrl": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/spotify-playing.svg",
                    "verb": "toggle-playback",
                    "role": "Button"
                },
                {
                    "type": "Action.Execute",
                    "verb": "next-song",
                    "iconUrl": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/spotify-next.svg",
                    "role": "Button"
                }
            ],
            "horizontalAlignment": "Center"
        }
    ]
}