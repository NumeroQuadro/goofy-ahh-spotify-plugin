{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${songTitle}",
                    "weight": "Bolder",
                    "size": "Large",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "${artistName}",
                    "spacing": "Small",
                    "isSubtle": true,
                    "wrap": true
                }
            ]
        },
        {
            "type": "Image",
            "url": "albumArt",
            "size": "Medium",
            "altText": "Album Art",
            "isVisible": "${host.widgetSize != 'small'}"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Execute",
                    "title": "⏮",
                    "verb": "previous-song"
                },
                {
                    "type": "Action.Execute",
                    "title": "${isPlaying ? '⏸️' : '▶️'}",
                    "verb": "toggle-playback"
                },
                {
                    "type": "Action.Execute",
                    "title": "⏭",
                    "verb": "next-song"
                }
            ]
        }
    ]
}