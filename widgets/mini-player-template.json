{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${songTitle}",
                    "weight": "Bolder",
                    "size": "Large",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "${artistName}",
                    "spacing": "Small",
                    "isSubtle": true,
                    "wrap": true
                }
            ]
        },
        {
            "type": "Image",
            "url": "albumArt",
            "size": "Medium",
            "altText": "Album Art"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Execute",
                    "verb": "previous-song",
                    "iconUrl": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/previous-song.png",
                    "role": "Button",
                    "isEnabled": false
                },
                {
                    "type": "Action.Execute",
                    "title": "${isPlaying ? '⏸️' : '▶️'}",
                    "verb": "toggle-playback",
                    "role": "Button"
                },
                {
                    "type": "Action.Execute",
                    "verb": "next-song",
                    "iconUrl": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/next-button.png",
                    "isEnabled": false,
                    "role": "Button"
                }
            ]
        }
    ]
}