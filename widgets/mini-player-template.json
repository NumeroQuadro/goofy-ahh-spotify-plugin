{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${songTitle}",
                    "weight": "Bolder",
                    "size": "Large",
                    "wrap": true,
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "${artistName}",
                    "spacing": "Small",
                    "size": "Default",
                    "isSubtle": true,
                    "wrap": true,
                    "horizontalAlignment": "Center"
                }
            ]
        },
        {
            "type": "Image",
            "url": "${albumArt}",
            "size": "Large",
            "altText": "Album Art",
            "spacing": "Small",
            "horizontalAlignment": "Center"
        },
        {
            "type": "ColumnSet",
            "spacing": "Medium",
            "horizontalAlignment": "Center",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/spotify-prev.svg",
                            "altText": "Previous",
                            "selectAction": {
                                "type": "Action.Execute",
                                "verb": "previous-song"
                            }
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/spotify-playing.svg",
                            "altText": "Play/Pause",
                            "selectAction": {
                                "type": "Action.Execute",
                                "verb": "toggle-playback"
                            },
                            "horizontalAlignment": "Center",
                            "spacing": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/NumeroQuadro/goofy-ahh-spotify-plugin/master/img/playback-icons/spotify-next.svg",
                            "altText": "Next",
                            "selectAction": {
                                "type": "Action.Execute",
                                "verb": "next-song"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}